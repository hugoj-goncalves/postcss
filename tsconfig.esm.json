{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist/lib",
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["es2015", "dom"],
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./dist/lib/*"],
  "exclude": ["node_modules"]
}
